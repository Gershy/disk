{
  "name": "@gershy/disk",
  "version": "0.0.2",
  "description": "Simplified filesystem access",
  "keywords": [
    "fs",
    "filesystem",
    "file",
    "directory"
  ],
  "author": "Gershom Maes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gershy/disk.git"
  },
  "bugs": {
    "url": "https://github.com/gershy/disk/issues"
  },
  "homepage": "https://github.com/gershy/disk#readme",
  "license": "ISC",
  "peerDependencies": {
    "@gershy/clearing": "^0.0.16"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@gershy/retry": "^0.0.2"
  },
  "type": "module",
  "files": [
    "cmp"
  ],
  "sideEffects": false,
  "types": "./cmp/mjs/main.d.ts",
  "exports": {
    ".": {
      "import": "./cmp/mjs/main.js",
      "require": "./cmp/cjs/main.js"
    }
  },
  "scripts": {
    "test": "npm run ts.check && npx tsx ./src/main.test.ts",
    "ts.check": "npx tsc --noEmit",
    "build.cjs": "tsc -p build/tsconfig.cjs.json",
    "build.mjs": "tsc -p build/tsconfig.mjs.json",
    "build": "node ./build/act.js removeCmp && npm run build.cjs && npm run build.mjs && node ./build/act.js finalizeExportVariants",
    "git.pub": "npm run test && git add --all && git commit -m \"automated\" && git push",
    "npm.login": "npm login",
    "npm.pub": "npm run test && npm run build && npm publish --access public"
  }
}
